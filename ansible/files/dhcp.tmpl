default-lease-time 3600;
max-lease-time 7200;
option domain-name-servers 8.8.8.8;
authoritative;

subnet {{ipblock}} netmask {{netmask}} {
  option routers {{router}};
  option broadcast-address {{broadcast}};

  {% for vm in instances %}
  host {{vm.uuid}} {
    hardware ethernet {{vm.macaddr}};
    fixed-address {{vm.ipv4}};
    option host-name "{{vm.name}}";
  }

  {% endfor %}
}
